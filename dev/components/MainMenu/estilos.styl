/*
*	$black = #212121
*	$white = #FAFAFA
*/

/*COMPONENTE MENU PRINCIPAL*/

.MainMenu
	background-color $black
	line-height 1.2em	
	
	&-button
		border 0
		border-radius 5px
		background-color $black
		order 2
		padding 0
		margin-right 1rem
	
	&-list
		margin 0
		padding 0
		list-style none
		height 0
		overflow hidden
		transition height .3s ease
		
		&--show
			height 280px
		
	&-link
		text-decoration none
		color $white
		width 100%
		padding 1.5em
		display block
		
/*Tablet*/

@media (min-width: 768px)
	.MainMenu		
		line-height 5em		
		&-button
			display none
			
		&-list
			height 5em
			
		&-item
			display inline-block
			
		&-link
			padding 0 .5em		